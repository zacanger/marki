.ng-modal-overlay {
  position:absolute;
  z-index:9999;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color:#131413;
  opacity: 0.8;
}
.ng-modal-dialog {
  z-index:10000;
  position: absolute;
  width: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  background-color: #fff5ee;
  box-shadow: 4px 4px 80px #131413;
}
.ng-modal-dialog-content {
  padding: 1em;
  text-align: left;
}
.ng-modal-close {
  position: absolute;
  top: 4px;
  right: 4px;
  padding: 4px;
  cursor: pointer;
  font-size: 2em;
  display: inline-block;
  font-weight: bold;
}
